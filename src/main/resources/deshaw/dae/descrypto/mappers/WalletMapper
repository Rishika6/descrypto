<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="deshaw.dae.descrypto.mappers.WalletMapper">
    <update id="addFund">
        update walletdb
        SET walletdb.assetCoins = walletdb.assetCoins + #{addedAmount}
        WHERE walletdb.walletId = #{walletId} AND walletdb.assetName = #{assetName}
    </update>
    <update id="withdrawFund">
        update walletdb
        SET walletdb.assetCoins =  CASE WHEN walletdb.assetCoins - #{withdrawalCoins} >= 0 THEN walletdb.assetCoins - #{withdrawalCoins} ELSE walletdb.assetCoins
        WHERE walletdb.walletId = #{walletId} AND walletdb.assetName = #{assetName}
    </update>

</mapper>


