
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="deshaw.dae.descrypto.mappers.UserMapper">
    <resultMap id="BaseResultMap"  type="deshaw.dae.descrypto.domain.User" >
        <result column="userId" property="userId"   />
        <result column="fullName" property="fullName"   />
        <result column="email" property="email" />
        <result column="password" property="password"/>
        <result column="walletId" property="walletId"/>
        <result column="phoneNo" property="phoneNo"/>
        <result column="pancardNo" property="pancardNo"/>
        <result column="dob" property="dob"/>
        <result column="nationality" property="nationality"/>
    </resultMap>

    <select id="findByFullUsername"  resultMap="BaseResultMap">
        select fullName,password from userdb where fullName=#{fullName}
    </select>
    <insert id="addUser" parameterType="deshaw.dae.descrypto.domain.User" keyProperty="userId"
            keyColumn="userId" useGeneratedKeys="true">
       insert into userdb( fullName, email, password, phoneNo, pancardNo, dob, nationality)
        values ( #{fullName}, #{email}, #{password}, #{phoneNo}, #{pancardNo}, #{dob}, #{nationality})
    </insert>
</mapper>

